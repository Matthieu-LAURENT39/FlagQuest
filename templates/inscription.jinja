{% include 'header.jinja' %}
    <main class=m-3>
        <div class="d-flex justify-content-center p-5 bg-dark">
            <!-- formulaire d'inscription -->
            <form class="form-register .d-none" id="form-register">
                <br><br>
                <h1 class="h3 mb-3 font-weight-normal text-white">S'inscrire</h1>
                    <!-- <label for="inputEmail" class="sr-only">Email</label> -->
                    <input type="email" id="inputEmail" class="form-control mb-3" placeholder="Adresse email" required autofocus>
                    <!-- <label for="inputEmail" class="sr-only">Nom d'utilisateur</label> -->
                    <input type="email" id="inputUsername" class="form-control mb-3" placeholder="Nom d'utilisateur" required autofocus>
                    <!-- <label for="inputPassword" class="sr-only">Mot de passe</label> -->
                    <input type="password" id="inputPassword" class="form-control mb-3" placeholder="Mot de passe" required>
                <button class="btn btn-lg btn-primary fw-bold btn-block bg-white border border-primary rounded text-primary border-3" type="submit">S'inscrire</button>
            </form>
        </div>
