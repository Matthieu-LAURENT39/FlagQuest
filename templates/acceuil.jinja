<main class="container bg-black pt-5">
  <div class="container-index row">
    <!-- partie gauche avec logo + texte -->
    <div class="index-left-part col text-center">
      <img src="./static/img/logo_rootme.svg" alt="logo Root Me" class="logo-rootme-large">
      <h1 class="text-white fs-2 fw-normal">Une plateforme rapide, accessible et réaliste pour tester vos compétences en
        hacking.
      </h1>
      <h3 class="text-info fs-3 fw-normal m-0">la root est longue mais la voie est Libre</h3>
    </div>

    <!-- partie droite avec formulaire d'inscription -->
    <div class="index-right-part modal modal-signin position-static d-block bg-black col " tabindex="-1" role="dialog"
      id="modalSignin">
      <div class="modal-dialog" role="document">
        <div class="modal-content rounded-2 bg-dark">
          <div class="modal-header px-4 pb-0 border-bottom-0">
            <!-- <h1 class="modal-title fs-5" >Modal title</h1> -->
            <h1 class="text-white">
              &nbsp;S'inscrire
            </h1>
          </div>

          <div class="modal-body p-5 px-4 pt-0">

            <form class="">

              <!-- NOM UTILISATEUR / PSEUDO -->
              <div class="mb-3 col-12">
                <label for="username" class="form-label text-white fw-semibold ms-1 fs-5">Votre nom ou votre pseudo
                  *</label>
                <input type="text"
                  class="input-login-username form-control text-white bg-black rounded-2 p-1 ps-3 border border-1 border-info-subtle"
                  id="username" value="" required="">
                <!-- si champ username vide -->
                <div class="invalid-feedback">
                  Veuillez renseigner ce champ.
                </div>
              </div>

              <!-- LOGIN -->
              <div class="mb-3 col-12">
                <label for="email" class="form-label text-white fw-semibold ms-1 fs-5">Votre adresse email *</label>
                <input type="email"
                  class="input-login-username form-control text-white bg-black rounded-2 p-1 ps-3 border border-1 border-info-subtle"
                  id="email" value="" required="">
                <!-- si champ username vide -->
                <div class="invalid-feedback">
                  Veuillez renseigner ce champ.
                </div>
              </div>

              <!-- PASSWORD -->
              <div class="mb-3 col-12">
                <label for="password" class="form-label text-white fw-semibold ms-1 fs-5">Votre mot de passe *</label>
                <input type="password"
                  class="input-login-password form-control text-white bg-black rounded-2 p-1 ps-3 border border-1 border-info-subtle"
                  id="password" value="" required="">
                <!-- si champ username vide -->
                <div class="invalid-feedback">
                  Veuillez renseigner ce champ.
                </div>
              </div>

              <!-- PASSWORD CONFIRMATION -->
              <div class="mb-3 col-12">
                <label for="password" class="form-label text-white fw-semibold ms-1 fs-5">Confirmer ce nouveau mot de
                  passe *</label>
                <input type="password"
                  class="input-login-password form-control text-white bg-black rounded-2 p-1 ps-3 border border-1 border-info-subtle"
                  id="password" value="" required="">
                <!-- si champ username vide -->
                <div class="invalid-feedback">
                  Veuillez renseigner ce champ.
                </div>
              </div>

              {# bouton valider #}
              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button class="btn-valider btn rounded-1 border-2 active text-info fs-5 fw-semibold px-4 py-2 mt-5"
                  type="submit">Valider</button>
              </div>
            </form>
          </div>
        </div>
      </div> <!--- fin formulaire de connexion a cette div -->
